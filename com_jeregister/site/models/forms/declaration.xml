<?xml version="1.0" encoding="utf-8"?>
<form
    addrulepath="/administrator/components/com_jeregister/models/rules"
    >
    <fieldset
				name="declaration_details"
				label="COM_JEREGISTER_DECLARAION_DETAILS"
	>
		<field
				name="id"
				type="hidden"
		/>
		<field
				name="producer_name"
				type="text"
				label="COM_JEREGISTER_REGISTRATION_PRODUCER_NAME_LABEL"
				description="COM_JEREGISTER_REGISTRATION_PRODUCER_NAME_DESC"
				size="80"
				class="inputbox"
				validate="string"
				required="true"
				hint="COM_JEREGISTER_REGISTRATION_PRODUCER_NAME_HINT"
				default=""
		/>
        <field
				name="captcha"
				type="captcha"
				label="COM_JEREGISTER_REGISTRATION_FIELD_CAPTCHA_LABEL"
				description="COM_JEREGISTER_REGISTRATION_FIELD_CAPTCHA_DESC"
				validate="captcha"
        >
		</field>
        <field
				name="blueberry_bearing_acres"
				type="number"
				label="COM_JEREGISTER_REGISTRATION_FIELD_BLUEBERRY_BEARING_ACRES"
				description="COM_JEREGISTER_REGISTRATION_FIELD_BLUEBERRY_BEARING_ACRES_DESC"
				class="inputbox"
				validate="numeric"
				min="0"
				max="10000"
				default="0"
		/>
    </fieldset>
</form>
